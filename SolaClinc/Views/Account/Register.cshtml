@model SolaClinc.Models.User2

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User2Name" class="control-label">Name</label>
                <input asp-for="User2Name" class="form-control" />
                <span asp-validation-for="User2Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User2Email" class="control-label">Email</label>
                <input asp-for="User2Email" class="form-control" />
                <span asp-validation-for="User2Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User2Phone" class="control-label">Phone</label>
                <input asp-for="User2Phone" class="form-control" />
                <span asp-validation-for="User2Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class ="form-control" asp-items="ViewBag.roles">
                    <option value="-1">--- Select Role ---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

